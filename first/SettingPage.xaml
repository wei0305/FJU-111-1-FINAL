<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="first.SettingPage"
             Title="設定">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Grid
    HorizontalOptions="FillAndExpand" VerticalOptions="Center"
    Padding="30,0"
      > 
            <Button Text="修改密碼"
            x:Name="buttonChangePW"
            HorizontalOptions="FillAndExpand"
            />
            </Grid>
            <Button Text="修改名稱"
            x:Name="buttonChangeAC"
            HorizontalOptions="FillAndExpand"
              />
            <Button Text="登出"
            x:Name="buttonLogOut"
            HorizontalOptions="FillAndExpand"
              />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
